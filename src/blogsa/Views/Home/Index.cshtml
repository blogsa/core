@{
    ViewData["Title"] = Settings.Title;
    ViewData["Description"] = Settings.Description;
}
<!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                @foreach(var post in DataService.Instance.Posts)
                {
                    <div class="post-preview">
                        <a href="/post/@post.Name">
                            <h2 class="post-title">
                                @post.Title
                            </h2>
                            <h3 class="post-subtitle">
                                @post.Summary
                            </h3>
                        </a>
                        <p class="post-meta">Posted by <a href="#">@post.Author</a> on @post.Date</p>
                    </div>
                    <hr>
                }
                <!-- Pager -->
                <ul class="pager hidden">
                    <li class="next">
                        <a href="#">Older Posts &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>